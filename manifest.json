{
  "manifest_version": 2,

  "name": "Anttila customer notifier",
  "description": "This extension shows a popup and logs user out when inactive.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "cookies",
    "*://*.anttila.com/*",
    "background", 
    "storage"
  ],
  "background": {
        "scripts": [
            "background.js"
        ]
    },

  "content_scripts": [
    {
      "matches": ["*://*.anttila.com/*"],
      "js": ["contentscript.js"]
    }
  ],
  "web_accessible_resources": ["injectscript.js"]
}
